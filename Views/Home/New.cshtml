@{
    ViewData["Title"] = "Add a Dish";
}
@model Dish

<h1 class="text-center display-4">Add a new Dish!</h1>
<h3><a href="/">Home</a></h3>
<div class="text-center">
    <Form action="create" method="post">
        <div class="form-group">
            <label for="ChefName">Chef's Name:</label>
            <input class="form-control" asp-for="ChefName">
            <span class="text-danger" asp-validation-for="ChefName"></span>
        </div>
        <div class="form-group">
            <label for="DishName">Name of Dish:</label>
            <input class="form-control" asp-for="DishName">
            <span class="text-danger" asp-validation-for="DishName"></span>
        </div>
        <div class="form-group">
            <label for="Calories"># of Calories:</label>
            <input class="form-control" asp-for="Calories">
            <span class="text-danger" asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness:</label>
            <select class="form-control" asp-for="Tastiness">
                <option disabled selected value=""> -- select a rating -- </option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span class="text-danger" asp-validation-for="Tastiness"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description:</label>
            <input class="form-control" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Add Dish">
    </Form>
</div>